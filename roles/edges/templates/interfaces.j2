{% set intvars = interfaces[ansible_hostname] %}
{% set neighborvars = intvars['neighbors'] %}
# /etc/network/interfaces template for servers ({{ansible_hostname}})
# Created by Ansible

auto lo
iface lo inet loopback

auto lo
iface lo inet static
    address {{ intvars.loopback }}/32

{% if intvars.loopback in vxlan.replicators %}
auto lo:0
iface lo:0 inet static
    address {{ vxlan.anycast }}/32
{% endif %}


auto {{ intvars.dhcp.iface }}
iface {{ intvars.dhcp.iface }} inet dhcp

{% for iface in neighborvars %}
auto {{ iface }}
iface {{ iface }} inet manual
{% endfor %}

{% for vid in intvars.vlans %}
auto {{intvars.vxlan.iface}}.{{ vid }}
iface {{intvars.vxlan.iface}}.{{ vid }} inet static
    address {{ intvars.vlans[vid] }}

{% endfor %}









